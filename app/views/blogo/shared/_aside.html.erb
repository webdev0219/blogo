<aside>
  <% if @paginator %>
    <header>
      <h1><%= t('blogo.user.all_posts') %></h1>
    </header>
    <ul class="blogo-recent-posts">
      <% @paginator.items.each do |post| %>
        <li>
          <%= link_to post.title, blogo_post_path(post) %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= render partial: 'paginator' %>

  <header>
    <h1><%= t('blogo.user.tags') %></h1>
  </header>
  <div class="tags">
    <% @tags.each do |tag| %>
      <%= link_to tag.name, blogo_tag_path(tag), class: 'tag pure-button button-secondary' %>
    <% end %>
  </div>
</aside>
