<!DOCTYPE html>
<html>
<head>
  <title><%= @meta[:title] %></title>
  <meta charset="UTF-8">

  <%= render partial: 'blogo/shared/meta' %>

  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "blogo/blog" %>

  <%= auto_discovery_link_tag :atom, blogo_feed_path %>
  <%= render 'blogo/shared/google_analytics' %>
</head>
<body>
  <div id="container">
    <header class="blogo-header">
      <div class='header-titles'>
        <h1>
          <%= link_to blogo_root_path do %>
            <div class="top-logo"></div>
          <% end %>
        </h1>
      </div>

      <div class='header-icons'>
        <%= render partial: 'blogo/shared/social_icons' %>
      </div>
    </header>

    <div id="content">
      <div class="pure-g-r">
        <div class="pure-u-3-4">
          <%= yield %>
        </div>

        <div class="pure-u-1-4">
          <%= render partial: 'blogo/shared/aside' %>
        </div>
      </div>      
    </div>

  </div>
</body>
</html>
